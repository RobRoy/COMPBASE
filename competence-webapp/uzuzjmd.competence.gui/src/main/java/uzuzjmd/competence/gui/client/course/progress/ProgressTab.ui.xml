<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<b:Alert type="INFO" animation="true">Hier können Sie die Zuordnung
			von den Kompetenzen und den Teilnehmern einsehen. Die Balken zeigen
			an, wie viele der ausgewählten Kompetenzen mit einer Aktivität eines
			Teilnehmers verknüpft wurden. Wenn keine Fortschrittsbalken angezeigt
			werden, müssen sie in dem Zuordung-Tab Aktivitäten zuordnen"</b:Alert>

		<g:FocusPanel ui:field="warningPlaceholder" width="auto"
			height="auto" />
		<b:Button icon="FILTER" text="Fortschrittsübersicht filtern"
			ui:field="filterButton" />
		<g:HTMLPanel styleName="buttonSpacer"></g:HTMLPanel>
		<g:VerticalPanel ui:field="competenceSelectionAndActivity">
			<g:CaptionPanel captionText="  Fortschritt"
				stylePrimaryName="progressEntryArea">
				<g:HTMLPanel stylePrimaryName="progressEntryAreaPanel">
					<g:ScrollPanel stylePrimaryName="progressEntryAreaPanel">
						<g:VerticalPanel ui:field="progressPlaceHolder"
							stylePrimaryName="progressEntryAreaPanel" />
					</g:ScrollPanel>
				</g:HTMLPanel>
			</g:CaptionPanel>

			<g:HTMLPanel ui:field="competenceSelectionPanelPlaceholder"></g:HTMLPanel>


		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 