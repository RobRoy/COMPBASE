<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
		<b:Heading size="2">Login</b:Heading>

		<g:VerticalPanel ui:field="errorHolder">
			<b:DropdownButton text="Test-Moodle">
				<b:NavHeader>Angebundene Systeme</b:NavHeader>
				<b:NavLink>Test-Moodle</b:NavLink>
			</b:DropdownButton>
			<b:DropdownButton text="E-Learning">
				<b:NavHeader>Deine Kurse</b:NavHeader>
				<b:NavLink>E-Learning</b:NavLink>
			</b:DropdownButton>


			<g:HorizontalPanel>
				<g:Label>Dein Nutzername</g:Label>
				<b:TextBox ui:field="loginTextBox" />
				<b:Button ui:field="button">einloggen</b:Button>
			</g:HorizontalPanel>
			<b:Alert type="ERROR" animation="true" visible="false"
				ui:field="numberError">Der Nutzername darf nicht mit einer Zahl anfangen</b:Alert>
			<b:Alert type="ERROR" animation="true" visible="false"
				ui:field="emptyError">Der Nutzername darf nicht leer sein</b:Alert>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 