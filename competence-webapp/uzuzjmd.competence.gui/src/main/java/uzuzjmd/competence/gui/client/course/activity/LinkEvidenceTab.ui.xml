<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<b:Alert type="INFO" animation="true">Ordnen Sie die
			Aktivitäten den Kompetenzen zu! Dies ermöglicht eine Übersicht über
			die erreichten Kompetenzen pro Teilnehmer!</b:Alert>
    	<g:FocusPanel ui:field="warningPlaceholder" width="auto"
			height="auto" />
		<g:HTMLPanel styleName="buttonSpacer"></g:HTMLPanel>
		<g:HorizontalPanel ui:field="buttonContainer">
			<b:Button icon="LINK" ui:field="submitButton">Markierte Kompetenzen und
				Aktivitäten verknüpfen</b:Button>
		</g:HorizontalPanel>
		<g:HTMLPanel styleName="buttonSpacer"></g:HTMLPanel>
		<g:VerticalPanel ui:field="competenceSelectionAndActivity">
			<g:HTMLPanel ui:field="competenceSelectionPanelPlaceholder"></g:HTMLPanel>
			<g:SimplePanel ui:field="HrPanelContainer" />
			<g:HTMLPanel styleName="activityArea">
				<g:CaptionPanel captionText="Aktivitäten">
					<g:HTMLPanel ui:field="activityPlaceholder" />
				</g:CaptionPanel>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 