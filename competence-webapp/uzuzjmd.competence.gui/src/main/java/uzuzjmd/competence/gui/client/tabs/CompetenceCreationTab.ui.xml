<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>

		<g:VerticalPanel>
			<g:HorizontalPanel>
				<g:VerticalPanel>
					<b:Row>
						<b:Column size="4">
							<g:Label text="Beschreibung der Kompetenz im Fließtext" />
						</b:Column>
						<b:Column size="4">
							<b:TextArea ui:field="competenceDescriptionTextArea"></b:TextArea>
						</b:Column>
						<b:Column size="4">
							<g:SimplePanel />
						</b:Column>
					</b:Row>

					<b:Row>
						<b:Column size="4">
							<g:Label text="Stichworte (komma separiert)" />
						</b:Column>
						<b:Column size="4">
							<b:TextArea ui:field="keywordsTextArea"></b:TextArea>
						</b:Column>
						<b:Column size="4">
							<g:SimplePanel />
						</b:Column>
					</b:Row>

					<b:Row>
						<b:Column size="4">
							<g:Label text="Operator" />
						</b:Column>
						<b:Column size="4">
							<b:TextArea ui:field="operatorTextArea"></b:TextArea>
						</b:Column>
						<b:Column size="4">
							<g:SimplePanel />
						</b:Column>
					</b:Row>
				</g:VerticalPanel>

				<g:VerticalPanel>
					<b:Button ui:field="button">speichern</b:Button>
					<b:Alert type="SUCCESS" visible="false" ui:field="successAlert">Die
						Kompetenz wurde abgespeichert!</b:Alert>
					<b:Alert type="ERROR" animation="true" visible="false"
						ui:field="emptyError">Die Kompetenzbeschreibung darf nicht leer sein!</b:Alert>
					<b:Alert type="ERROR" animation="true" visible="false"
						ui:field="emptyError2">Der Operator darf nicht leer sein!</b:Alert>
					<b:Alert type="ERROR" animation="true" visible="false"
						ui:field="emptyError3">Die Stichworte dürfen nicht leer sein!</b:Alert>
					<b:Alert type="ERROR" animation="true" visible="false"
						ui:field="logicError"></b:Alert>
				</g:VerticalPanel>
			</g:HorizontalPanel>
			<g:SimplePanel ui:field="superCompetenceSelectionHolder" />
			<g:SimplePanel ui:field="subCompetencSelectionHolder" />
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 