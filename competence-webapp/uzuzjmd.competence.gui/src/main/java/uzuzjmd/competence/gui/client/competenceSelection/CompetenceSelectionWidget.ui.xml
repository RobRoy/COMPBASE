<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	}
	</ui:style>
	<g:HTMLPanel styleName="competencePanel">
		<g:CaptionPanel captionText="  Kompetenzauswahl"
			ui:field="captionPanel">
			<g:VerticalPanel ui:field="competenceTreeContainer"
				verticalAlignment="ALIGN_TOP">
				<g:HTMLPanel ui:field="competenceTreeCaptionPanel"
					styleName="competenceSelectionPanel" width="100%" />

				<b:Button icon="REFRESH" text="Zurücksetzen" ui:field="resetButton" />
				<g:SimplePanel ui:field="toggleButtonPlaceholder"
					stylePrimaryName="toggleButton" />				

				<g:HorizontalPanel ui:field="competenceFilterPanel"
					height="100%">
					<g:VerticalPanel ui:field="operatorPanel" height="100%">
						<g:HTMLPanel ui:field="operatorCaptionPanel"
							styleName="operatorSelectionPanel" height="100%" />
						<g:HTMLPanel ui:field="competenceCompulsoryCheckbox"
							styleName="competenceCompulsoryCheckbox" height="100%">
							<g:VerticalPanel height="100%">
								<b:RadioButton name="competenceFilter" text="Alle anzeigen"
									ui:field="alleRadioButton" />
								<b:RadioButton name="competenceFilter" text="Verpflichtende anzeigen"
									ui:field="verpflichtendeRadioButton" />
								<b:RadioButton name="competenceFilter"
									text="Nicht verpflichtende anzeigen" ui:field="nichtVerpflichtendeRadioButton" />
							</g:VerticalPanel>
						</g:HTMLPanel>
					</g:VerticalPanel>
					<g:VerticalPanel height="100%">
						<g:HTMLPanel ui:field="catchwordCaptionPanel"
							styleName="catchwordSelectionPanel" height="100%" />
						<g:HorizontalPanel horizontalAlignment="ALIGN_CENTER"
							height="100%">
							<b:Button icon="FILTER" text="Filtern" ui:field="filterButton" />
						</g:HorizontalPanel>
					</g:VerticalPanel>
					<g:Label text="Text enthält: " />
					<b:TextBox ui:field="textSearchField"></b:TextBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:CaptionPanel>
		<b:Alert type="INFO">Bitte gedulden Sie sich. Das laden der
			Kompetenzdaten kann aufgrund der Konsistenzprüfung einen Moment
			dauern!</b:Alert>
	</g:HTMLPanel>
</ui:UiBinder> 