<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="1800" height="950">
		<g:AbsolutePanel height="794px" width="1600px" ui:field="absolutePanel">
			<g:at left="0" top="0">
				<g:FlowPanel width="806px" height="34px">
						<g:Label text="Willkommen bei der Didaktik der Informatik Recherche Plattform" styleName="{style.important}"/>
					</g:FlowPanel>
			</g:at>
			<g:at left="10" top="74">
				<g:VerticalPanel width="201px" height="85px">
						<g:Button ui:field="searchButton">Begriffssuche</g:Button>
						<g:TextArea width="147px" height="36px" ui:field="searchTextField"/>
					</g:VerticalPanel>
			</g:at>
			<g:at left="246" top="74">
				<g:AbsolutePanel width="1105px" height="608px" ui:field="glassPanelContainer">
					<g:at left="0" top="0">
						<g:FocusPanel ui:field="focusPanel1" width="877px" height="598px">
							<g:SimplePanel width="871px" height="594px"/>
						</g:FocusPanel>
					</g:at>
					<g:at left="901" top="499">
						<g:Button width="96px" height="45px" ui:field="resetButton">reset</g:Button>
					</g:at>
					<g:at left="883" top="0">
						<g:ScrollPanel height="468px" width="147px">
							<g:VerticalPanel ui:field="relevanteLiteratureButtonListe" width="100%" height="461px"/>
						</g:ScrollPanel>
					</g:at>
				</g:AbsolutePanel>
			</g:at>
			<g:at left="10" top="185">
				<g:VerticalPanel width="201px" height="150px">
					<g:Button ui:field="searchPathButton">Finde Lernweg</g:Button>
					<g:HorizontalPanel>
						<g:Label text="von:" width="30"/>
						<g:TextBox width="181px" ui:field="searchFromTextField"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="bis:" width="30"/>
						<g:TextBox width="181px" ui:field="searchToTextField"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:at>
			<g:at left="10" top="356">
				<g:VerticalPanel width="201px" height="54px">
					<g:Label text="Baue auf letztem Ergebnis auf"/>
					<g:ToggleButton text="JA" ui:field="toggleButton"/>
				</g:VerticalPanel>
			</g:at>
			<g:at left="10" top="445">
				<g:AbsolutePanel width="201px" height="322px">
					<g:at left="0" top="45">
						<g:ScrollPanel width="201px" height="113px" ui:field="SelectedListPanel">
							<g:VerticalPanel width="100%" height="100%" ui:field="VerticalPanel"/>
						</g:ScrollPanel>
					</g:at>
					<g:at left="0" top="10">
						<g:Label text="Bis jetzt ausgewählt:"/>
					</g:at>
					<g:at left="0" top="175">
						<g:Button ui:field="deleteSelection">Auswahl löschen</g:Button>
					</g:at>
					<g:at left="0" top="209">
						<g:Button width="114px" height="28px" ui:field="auswahlTaggen">Auswahl taggen</g:Button>
					</g:at>
					<g:at left="0" top="269">
						<g:Button ui:field="literaturAnzeigen" width="156px" height="28px">Literatur für Auswahl anzeigen</g:Button>
					</g:at>
				</g:AbsolutePanel>
			</g:at>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder> 