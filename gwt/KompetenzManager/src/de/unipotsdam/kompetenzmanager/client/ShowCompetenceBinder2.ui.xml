<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="1800" height="950">
		<g:AbsolutePanel height="692px" width="1600px" ui:field="absolutePanel">
			<g:at left="0" top="0">
				<g:FlowPanel width="806px" height="34px">
						<g:Label text="Willkommen bei der Didaktik der Informatik Recherche Plattform" styleName="{style.important}"/>
					</g:FlowPanel>
			</g:at>
			<g:at left="10" top="74">
				<g:VerticalPanel width="201px" height="85px">
						<g:Button ui:field="searchButton">Begriffssuche</g:Button>
						<g:TextArea width="147px" height="36px" ui:field="searchTextField"/>
					</g:VerticalPanel>
			</g:at>
			<g:at left="246" top="74">
				<g:AbsolutePanel width="994px" height="568px" ui:field="glassPanelContainer">
					<g:at left="0" top="0">
						<g:FocusPanel ui:field="focusPanel1" width="939px" height="475px">
							<g:SimplePanel width="100%" height="477px"/>
						</g:FocusPanel>
					</g:at>
					<g:at left="690" top="494">
						<g:Button width="96px" height="45px" ui:field="resetButton">reset</g:Button>
					</g:at>
					<g:at left="10" top="496">
						<g:Label text="Relevante Literatur:" width="96px" height="43px"/>
					</g:at>
					<g:at left="125" top="494">
						<g:HorizontalPanel width="538px" height="45px" ui:field="selectedLiterature">
							<g:ScrollPanel height="43px"/>
						</g:HorizontalPanel>
					</g:at>
				</g:AbsolutePanel>
			</g:at>
			<g:at left="10" top="185">
				<g:VerticalPanel width="201px" height="150px">
					<g:Button ui:field="searchPathButton">Finde Lernweg</g:Button>
					<g:HorizontalPanel>
						<g:Label text="von:" width="30"/>
						<g:TextBox width="181px" ui:field="searchFromTextField"/>
					</g:HorizontalPanel>
					<g:HorizontalPanel>
						<g:Label text="bis:" width="30"/>
						<g:TextBox width="181px" ui:field="searchToTextField"/>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:at>
			<g:at left="10" top="356">
				<g:VerticalPanel width="201px" height="54px">
					<g:Label text="Baue auf letztem Ergebnis auf"/>
					<g:ToggleButton text="JA" ui:field="toggleButton"/>
				</g:VerticalPanel>
			</g:at>
			<g:at left="10" top="467">
				<g:AbsolutePanel width="201px" height="215px">
					<g:at left="0" top="45">
						<g:ScrollPanel width="201px" height="113px" ui:field="SelectedListPanel">
							<g:VerticalPanel width="100%" height="100%" ui:field="VerticalPanel"/>
						</g:ScrollPanel>
					</g:at>
					<g:at left="0" top="10">
						<g:Label text="Bis jetzt ausgewählt:"/>
					</g:at>
					<g:at left="0" top="175">
						<g:Button ui:field="deleteSelection">Auswahl löschen</g:Button>
					</g:at>
				</g:AbsolutePanel>
			</g:at>
		</g:AbsolutePanel>
	</g:HTMLPanel>
</ui:UiBinder> 