<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
	>
	<g:HTMLPanel>
		<g:HorizontalPanel width="auto" height="auto" spacing="40" verticalAlignment="ALIGN_MIDDLE">
			<g:SimplePanel width="auto" height="auto" stylePrimaryName="userLabel">
				<b:Label text="New Label" ui:field="userNameLabel" horizontalAlignment="ALIGN_LEFT" type="INFO" width="100%" height="100%"/>
			</g:SimplePanel>
			<g:SimplePanel styleName="progressBar" ui:field="progressBarPlaceholder" width="auto" height="auto"/>
			<g:SimplePanel width="auto" height="auto">
				<b:Button ui:field="showEvidencesButton" width="100%" height="100%">Zeige Evidenzen</b:Button>
			</g:SimplePanel>
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 