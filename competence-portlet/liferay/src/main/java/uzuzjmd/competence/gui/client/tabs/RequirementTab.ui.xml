				verticalAlignment="ALIGN_TOP">
				<g:HTMLPanel ui:field="competenceSelectionPanelPlaceholder" />
				<g:SimplePanel ui:field="hrDividerPanel" />
				<g:HTMLPanel stylePrimaryName="requirementTextArea">
					<g:CaptionPanel ui:field="requirementTextBoxPlaceholder" captionText="  Anforderungen">
