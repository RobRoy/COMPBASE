<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:VerticalPanel ui:field="verticalPanel">
			<b:Alert heading="Lernpfade" type="INFO" close="false">Mit Click auf
				eine vorhandene Kompetenz können sie diese mit einer anderen
				verknüpfen. Dies gibt den Lernenden einen Pfad vor. Dieses Vorgehen
				ist optional.</b:Alert>
			<g:ScrollPanel stylePrimaryName="graphScrollPanel" >
				<g:SimplePanel width="100%" height="100%">
				<g:VerticalPanel ui:field="listedCompetencesPlaceholder" width="100%" height="100%" />
			</g:SimplePanel>
			</g:ScrollPanel>
			<g:HorizontalPanel width="100%" height="100%">
				<g:SimplePanel ui:field="graphPanelPlaceHolder" />
				<g:VerticalPanel>
					<b:Button icon="PLUS" loadingText="lade Kompetenzen aus der Datenbank"
						ui:field="addCompetencesButton"></b:Button>
					<b:Button icon="FILTER" loadingText="lade Kompetenzen aus der Datenbank"
						ui:field="filterCompetencesButton"></b:Button>
					<b:Button icon="REPEAT" loadingText="lade Kompetenzen aus der Datenbank"
						ui:field="refreshButton"></b:Button>
				</g:VerticalPanel>
			</g:HorizontalPanel>

		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 